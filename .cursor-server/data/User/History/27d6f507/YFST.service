[Unit]
Description=NetGuard Pro - Device Tracker
After=network.target network-online.target
Wants=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=jarvis
Group=jarvis
WorkingDirectory=/home/jarvis/NetGuard/scripts
ExecStart=/usr/bin/python3 /home/jarvis/NetGuard/scripts/device_tracker.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Resource limits
MemoryMax=512M
CPUQuota=20%

# Auto-restart on failure
StartLimitBurst=5

[Install]
WantedBy=multi-user.target

