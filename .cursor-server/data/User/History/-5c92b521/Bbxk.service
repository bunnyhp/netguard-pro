[Unit]
Description=NetGuard Pro - Device Security Scorer
After=network.target network-online.target device-tracker.service iot-security-scanner.service
Wants=network-online.target
StartLimitIntervalSec=0

[Service]
Type=oneshot
User=jarvis
Group=jarvis
WorkingDirectory=/home/jarvis/NetGuard/scripts
ExecStart=/usr/bin/python3 /home/jarvis/NetGuard/scripts/device_scorer.py

# Run every 5 minutes
[Install]
WantedBy=multi-user.target

