[Unit]
Description=NetGuard Pro - Enhanced IoT Security Scanner
After=network.target network-online.target device-tracker.service
Wants=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=jarvis
Group=jarvis
WorkingDirectory=/home/jarvis/NetGuard/scripts
ExecStart=/usr/bin/python3 /home/jarvis/NetGuard/scripts/enhanced_iot_security_scanner.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Resource limits
MemoryMax=1G
CPUQuota=30%

# Auto-restart on failure
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
